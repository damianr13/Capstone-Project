<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nanodegree.damian.runny.WorkoutActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/apl_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ToolbarStyle"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/tv_label_time"
        style="@style/LabelText"
        android:text="@string/label_time"
        android:layout_marginStart="@dimen/margin_start_default"
        android:layout_marginLeft="@dimen/margin_start_default"
        android:layout_marginBottom="@dimen/big_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_label_distance"
        style="@style/LabelText"
        android:text="@string/label_distance"
        app:layout_constraintStart_toStartOf="@id/tv_label_time"
        app:layout_constraintBottom_toTopOf="@id/tv_label_time" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/apl_appbar"
        app:layout_constraintBottom_toTopOf="@id/tv_label_distance"
        app:layout_constraintStart_toStartOf="parent"/>


</android.support.constraint.ConstraintLayout>
