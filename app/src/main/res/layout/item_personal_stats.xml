<?xml version="1.0" encoding="utf-8"?>
<!--I chose RelativeLayout so I can include this layout in the widget-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_entry_title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_start_default"
        android:layout_marginRight="@dimen/margin_start_default"
        android:layout_alignParentTop="true"
        tools:text="Run 1" />

    <TextView
        style="@style/LabelText"
        android:id="@+id/tv_label_distance"
        android:text="@string/label_distance"
        android:layout_below="@id/tv_entry_title"/>

    <TextView
        style="@style/LabelText"
        android:id="@+id/tv_label_time"
        android:text="@string/label_time"
        android:layout_below="@id/tv_label_distance"/>

    <TextView
        style="@style/ValueText"
        android:id="@+id/tv_value_distance"
        android:layout_below="@id/tv_entry_title"
        android:layout_centerHorizontal="true"
        tools:text="2.5 km" />

    <TextView
        style="@style/ValueText"
        android:id="@+id/tv_value_time"
        android:layout_below="@id/tv_label_distance"
        android:layout_centerHorizontal="true"
        tools:text="15'23''"/>


</RelativeLayout>